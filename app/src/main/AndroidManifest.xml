<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ilesanmi.oluwole.bakingapplication"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- PayAttention to android:name=".MvpApplication" below it is included because of Dagger -->
    <application
        android:name=".MvpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.detail.DetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.main.MainActivity"
            android:screenOrientation="portrait"/>

        <!--Activity is created because of the master detail flow-->
        <activity android:name=".ui.detail.LayoutActivity.ItemDetailActivity"
                  android:parentActivityName=".ui.detail.DetailActivity"/>


        <!-- BroadcastReceiver(BakingWidgetProvider) for widget -->
        <receiver android:name=".ui.widget.BakingWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/baking_app_widget_info"/>
        </receiver>

        <!-- Configuration Activity(WidgetActivity.class) for widget -->
        <activity
            android:name=".ui.widget.WidgetActivity"
            android:label="@string/title_activity_widget"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <!-- Binds an Adapter(WidgetService.class) to ListView(widget_list_view) of widget -->
        <service
            android:name=".ui.widget.WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>


    </application>

</manifest>